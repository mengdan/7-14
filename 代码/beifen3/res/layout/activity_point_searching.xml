<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backggrass"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext1"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="关键字"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonasdasd"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="46dp"
        android:background="@drawable/ggg" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonasdasd"
        android:layout_alignRight="@+id/editText1"
          android:textColor="#000000"
        android:text="去目的地"
        android:textSize="30px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonyuyin"
        android:layout_alignLeft="@+id/textView1"
        android:text="使用语音输入"
          android:textColor="#000000"
        android:textSize="30px" />

    <Button
        android:id="@+id/buttonyuyin"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonasdasd"
        android:layout_marginTop="73dp"
        android:background="@drawable/sss" />

</RelativeLayout>